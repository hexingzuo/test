<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:alpha="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d2e9ff">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/detail_song_name"
            app:layout_widthPercent="70%"
            app:layout_heightPercent="6%"
            android:layout_centerHorizontal="true"
            android:text="歌名"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/detail_singer"
            app:layout_widthPercent="70%"
            app:layout_heightPercent="5%"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/detail_song_name"
            android:gravity="center"
            android:text="歌手"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            />
    </android.support.percent.PercentRelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/back_to_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:alpha="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/play"
            android:alpha="0.9"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:id="@+id/detail_previous"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上一首"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/pause_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂停"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_style"/>
        <Button
            android:id="@+id/detail_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下一首"
            android:textSize="18sp"
            android:padding="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_style"/>
    </LinearLayout>

</LinearLayout>
